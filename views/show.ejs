<% include ./partials/header %>
<div class="ui main container">
    <div class="ui segment">
    <img class="ui fluid huge centered image" id="postImg" src="<%= blog.image %>">
        <article>
            <h2 class="ui header"><%= blog.title %>
            </h2>
            <div class="meta">
                <span class="date"><%= blog.created.toDateString() %></span>
            </div>
            <div class="meta">
                Author: <span class="author"><strong><%= blog.author.username %></strong></span>
            </div>
            <hr class="style-two">
            <div class="ui equal width aligned padded grid">
              <div class="row">
                    <div class="ui modal">
                        <i class="close icon"></i>
                        <div class="image content">
                            <div class="ui centered image">
                            <img src="<%= blog.image %>">
                           </div>
                        </div>
                    </div>
                <div class="thirteen wide column">
                  <%- blog.body %>
                </div>
              </div>
            </div>  
        </article>
        <div class="extra">
          <a class="ui right floated button" href="/blogs/<%= blog._id %>/edit">Edit post</a>
          <form id="delete" action="/blogs/<%= blog.id %>?_method=DELETE" method="POST">
              <button class="ui button" href="/blogs/<%= blog.id %>/edit">Delete</button>
          </form>
        </div>  
</div>
<% include ./partials/footer %>